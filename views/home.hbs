{{!-- Hero Section --}}
<header class="hero-section text-center text-light bg-primary">
  <div class="container py-5">
    <h1 class="display-4">Welcome to Blogify</h1>
    <p class="lead">Share your stories, ideas, and experiences with the world.</p>
    {{#if user}}
    <a href="/create-blog" class="btn btn-light btn-lg mt-3">Get Started</a>
    {{else}}
    <a href="/login" class="btn btn-light btn-lg mt-3">Get Started</a>
    {{/if}}
  </div>
</header>

{{!-- Featured Blogs Section --}}
<section class="featured-blogs py-5">
  <div class="container">
    <h2 class="text-center mb-4">Featured Blogs</h2>
    <div class="row g-4">
      {{#each blogs}}
      <div class="col-md-4">
        <div class="card shadow-sm">
          <img src="{{this.imageUrl}}" class="card-img-top" alt="Blog Image">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.shortDescription}}</p>
            <a href="/blog/read/{{this.id}}" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{!-- About Section --}}
<section class="about-section bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <img src="/images/about-image.png" alt="About Us" class="img-fluid rounded">
      </div>
      <div class="col-md-6">
        <h2>About Blogify</h2>
        <p>Blogify is your go-to platform for creating and sharing blogs effortlessly. Whether you're a writer, a traveler, or a thought leader, Blogify makes it simple to connect with your audience.</p>
        <a href="#" class="btn btn-dark">Learn More</a>
      </div>
    </div>
  </div>
</section>

{{!-- Footer --}}
<footer class="bg-dark text-light py-3 text-center">
  <p>&copy; 2025 Blogify. All rights reserved.</p>
</footer>

{{#if specialAttension}}
<script>
  alert({{specialAttension}})
</script>
{{/if}}